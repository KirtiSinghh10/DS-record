#include <stdio.h>
#include <stdlib.h>
#define N 10

int arr[N];
int f=-1;
int r=-1;

void enqueue(int x){
    if (f==-1&&r==-1){
        f=0;
        r=0;
        arr[r]=x;
    }
    else if((r+1)%N==f){
        printf("The queue is full");
    }
    else{
        r=(r+1)%N;
        arr[r]=x;
    }}
void dequeue(){
    if (f==-1&&r==-1){
        printf("The queue is empty");}
    else if(f==r){
        printf("the popped element is: %d", arr[f]);
        f=-1;
        r=-1;
    }
    else{
        printf("the popped element is: %d", arr[f]);
        f=(f+1)%N;
    }
    }
void display(){
    if (f == -1 && r == -1) {
        printf("The queue is empty\n");
        return;
    }
    printf("the elements of the queue are:");
    int i=f;
    while (1){
            printf("%d ", arr[i]);
            if (r==i){
                break;

            }
            i=(i+1)%N;

    }
}

int main(){
    while (1) {
        int c;
        printf("\n1: Enqueue\n2: Dequeue\n3: Display\n4: Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &c);

        switch (c) {
            case 1: {
                int x;
                printf("Enter element to be enqueued: ");
                scanf("%d", &x);
                enqueue(x);
                break;
            }
            case 2:
                dequeue();
                break;
            case 3:
                display();
                break;
            case 4:
                exit(0);
            default:
                printf("Invalid choice\n");
        }
    }

    }
