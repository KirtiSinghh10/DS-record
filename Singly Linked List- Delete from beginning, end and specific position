#include <stdio.h>
#include <stdlib.h>

struct Node{
    int data;
    struct Node* next;
};
struct Node* head=NULL;

struct Node* CreateNode(int data){
    struct Node* newNode=(struct Node*)malloc(sizeof(struct Node));
    newNode->data=data;
    newNode->next=NULL;
    return newNode;
};

void insertatbeg(int data){
    struct Node* newNode=CreateNode(data);
    newNode->next=head;
    head=newNode;
}
void deleteatend(){
    if(head==NULL){
        printf("Empty List");
    }
    else if (head->next==NULL){
        free(head);
        head=NULL;
    }
    else{
        struct Node* prev=NULL;
        struct Node* temp=head;
        while (temp->next!=NULL){
            prev=temp;
            temp=temp->next;
        }
        prev->next=temp->next;
        free(temp);
    }}

void deleteatbeg(){
     if(head==NULL){
        printf("Empty List");
    }
    else if (head->next==NULL){
        free(head);
        head=NULL;
    }
    else{
        struct Node* temp=head;
        head=head->next;
        free(temp);
    }
}

void deleteatpos(int pos){
    if(head==NULL){
        printf("Empty List");
    }
    else if (head->next==NULL){
        free(head);
        head=NULL;
    }
    else{
        struct Node* temp=head;
        for(int i=1;i<pos-1;i++){
            temp=temp->next;
        }
       struct Node* suc=temp->next;
       temp->next=suc->next;
       free(suc);
    }
}

void display(){
    if (head==NULL){
        printf("List is Empty");
    }
    struct Node* temp=head;
    do{
        printf("%d ", temp->data);
        temp=temp->next;
    }while(temp!=NULL);}

int main(){
while (1){
    int c;
    printf("\n Choose Operation: \n 1:Insert at beginning, 2:Delete from beginning, 3: Delete from end, 4:Delete at specific position, 5: Display, 6:Exit \n");
    scanf("%d", &c);
    switch(c){
    case 1:{
        int value;
        printf("Enter Value:");
        scanf("%d", &value);
        insertatbeg(value);
        break;
        }
    case 2:{
        deleteatbeg();
        break;}
    case 3:{
        deleteatend();
        break;}
    case 4:{
        int pos;
        printf("Enter position:");
        scanf("%d", &pos);
        deleteatpos(pos);
        break;}
    case 5:{
        display();
        break;
    }
    case 6:{
        exit(0);
        break;
    }
    default:{
        printf("Invalid input. Choose again");
        break;}
}
}
}

