#include <stdio.h>
#include <stdlib.h>

#define M 1000

int hashTable[M];

void init() {
    for (int i = 0; i < M; i++)
        hashTable[i] = -1;
}

void insert(int key) {
    int index = key % M;
    while (hashTable[index] != -1) {
        index = (index + 1) % M;
    }
    hashTable[index] = key;
}

void display() {
    for (int i = 0; i < M; i++) {
        if (hashTable[i] != -1)
            printf("Index %d : %d\n", i, hashTable[i]);
    }
}

int main() {
    int n, key;

    init();

    printf("Enter number of records: ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        printf("Enter 4-digit key: ");
        scanf("%d", &key);
        insert(key);
    }

    printf("\nHash Table:\n");
    display();

    return 0;
}
